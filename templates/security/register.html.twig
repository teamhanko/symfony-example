{% extends 'base.html.twig' %}

{% block body_id 'login' %}

{% block main %}

    {#
        This references the Stimulus controller defined in
        "assets/controllers/register-controller.js".
        See https://symfony.com/doc/current/frontend/encore/simple-example.html#stimulus-symfony-ux
        More info on Symfony UX https://ux.symfony.com
    #}
    <div class="row" {{ stimulus_controller('register', {
        'hankoApiUrl': hanko_api_url()
    }) }}{# @see assets/controllers/register-controller.js #}>
        <div class="col-sm-5">
            <div class="jumbotron">
                {{ form_start(userForm) }}
                    {{ form_widget(userForm) }}

                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save" aria-hidden="true"></i> {{ 'action.save'|trans }}
                    </button>
                {{ form_end(userForm) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block sidebar %}
    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}
